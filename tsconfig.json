{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@data/*": ["/data/*"],
      "@libs/*": ["libs/*"],
      "@components/*": ["/components/*"],
      "@constant/*": ["/constant/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "constant.js"],
  "exclude": ["node_modules"]
}
